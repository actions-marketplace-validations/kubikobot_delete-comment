{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                     /* New in TS 5.0, skips type checking of declaration files */
    "forceConsistentCasingInFileNames": true,  /* New in TS 5.0, ensures consistent file name casing */
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
